   class MyBoard extends JDialog {
	   
	   
	   
      private static final String FileReader = null;
	JLabel rec;
    
    
      
      MyBoard(){
         rec = new JLabel(FileReader);

         
         add(rec);
         setLayout(new FlowLayout());
         setVisible(true);
         setSize(300, 300);
         setTitle("RECORD");
         
      }
      
   }
